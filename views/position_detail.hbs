<div class='container-fluid'>

    <div class='row'>

        <div class='col-sm-3'>
            
            {{>sidebar}}

        </div>

        <div class='col-sm-6'>

          <h1>{{title}}</h1>
          
          <ul>
              {{#each users}}
              <li><a href={{userUrl}}>{{this.name}}</a></li>
              {{else}}
              <li>There are no users.</li>
              {{/each}}
          </ul>

        </div>

        <div class='col-sm-3'>

            {{>options}}

        </div>

    </div>

</div>